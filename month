        <div class="calendar-grid" id="calendar"></div>
    </div>

    <!-- 일정 추가 모달 -->
    <div class="modal" id="eventModal">
        <div class="modal-content">
            <div class="modal-header">일정 추가</div>
            <form id="eventForm" onsubmit="saveCustomEvent(event)">
                <div class="form-group">
                    <label class="form-label">일정 제목</label>
                    <input type="text" class="form-input" id="eventTitle" required>
                </div>

                <div class="form-group">
                    <label class="form-label">날짜</label>
                    <input type="date" class="form-input" id="eventDate" required>
                </div>

                <div class="form-group">
                    <label class="form-label">색상</label>
                    <div class="color-palette">
                        <div class="color-option selected" style="background: #ffd4e0;" data-color="#ffd4e0"></div>
                        <div class="color-option" style="background: #ffa07a;" data-color="#ffa07a"></div>
                        <div class="color-option" style="background: #ffe4b5;" data-color="#ffe4b5"></div>
                        <div class="color-option" style="background: #b4e7ce;" data-color="#b4e7ce"></div>
                        <div class="color-option" style="background: #a8d8ea;" data-color="#a8d8ea"></div>
                        <div class="color-option" style="background: #d4b5f6;" data-color="#d4b5f6"></div>
                        <div class="color-option" style="background: #ffb3c6;" data-color="#ffb3c6"></div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">메모 (선택)</label>
                    <textarea class="form-textarea" id="eventMemo"></textarea>
                </div>

                <div class="modal-actions">
                    <button type="button" class="modal-btn modal-btn-secondary" onclick="closeModal()">취소</button>
                    <button type="submit" class="modal-btn modal-btn-primary">저장</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        let currentDate = new Date();
        let customEvents = [];
        let selectedColor = '#ffd4e0';

        // localStorage에서 커스텀 일정 로드
        function loadCustomEvents() {
            const saved = localStorage.getItem('notion_custom_events');
            if (saved) {
                customEvents = JSON.parse(saved);
            }
        }

        // localStorage에 저장
        function saveCustomEvents() {
            localStorage.setItem('notion_custom_events', JSON.stringify(customEvents));
        }

        // 날짜 포맷팅
        function formatDate(date) {
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            return `${year}-${month}-${day}`;
        }

        // 주말 체크
        function isWeekend(date) {
            const day = date.getDay();
            return day === 0 || day === 6;
        }

        // 평일 체크
        function isWeekday(date) {
            return !isWeekend(date);
        }

        // 주차 계산
        function getWeekOfMonth(date) {
            const firstDay = new Date(date.getFullYear(), date.getMonth(), 1);
            const firstDayOfWeek = firstDay.getDay();
            const dayOfMonth = date.getDate();
            return Math.ceil((dayOfMonth + firstDayOfWeek) / 7);
        }

        // 해당 월의 n번째 평일 찾기
        function getNthWeekdayOfMonth(year, month, weekNum, dayOfWeek) {
            const dates = [];
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            
            for (let day = 1; day <= daysInMonth; day++) {
                const date = new Date(year, month, day);
                if (date.getDay() === dayOfWeek && isWeekday(date)) {
                    dates.push(day);
                }
            }
            
            return dates[weekNum - 1] || null;
        }

        // 정기 일정 생성
        function generateRecurringEvents(year, month) {
            const events = [];
            const daysInMonth = new Date(year, month + 1, 0).getDate();

            // 1. 매달 1일 - 청구
            events.push({
                title: '청구',
                date: new Date(year, month, 1),
                type: '청구',
                isMultiDay: false
            });

            // 2. 첫 주 4일 (월~목) - 본인부담금
            let firstWeekDays = [];
            for (let day = 1; day <= daysInMonth; day++) {
                const date = new Date(year, month, day);
                if (getWeekOfMonth(date) === 1 && isWeekday(date) && firstWeekDays.length < 4) {
                    firstWeekDays.push(day);
                }
            }
            
            if (firstWeekDays.length >= 4) {
                const startDay = firstWeekDays[0];
                const endDay = firstWeekDays[3];
                for (let day = startDay; day <= endDay; day++) {
                    const date = new Date(year, month, day);
                    if (isWeekday(date)) {
                        events.push({
                            title: '본인부담금',
                            date: date,
                            type: '본인부담금',
                            isMultiDay: true,
                            startDate: formatDate(new Date(year, month, startDay)),
                            endDate: formatDate(new Date(year, month, endDay))
                        });
                    }
                }
            }

            // 3. 첫 주 마지막 금요일 - 우편발송
            for (let day = 1; day <= 7; day++) {
                const date = new Date(year, month, day);
                if (date.getDay() === 5 && getWeekOfMonth(date) === 1) {
                    events.push({
                        title: '우편발송',
                        date: date,
                        type: '우편발송',
                        isMultiDay: false
                    });
                    break;
                }
            }

            // 4. 둘째주~넷째주 반 (10일-25일 사이 평일) - 어르신 상담 기간
            let counselingDays = [];
            for (let day = 1; day <= daysInMonth; day++) {
                const date = new Date(year, month, day);
                const week = getWeekOfMonth(date);
                if (week >= 2 && week <= 4 && isWeekday(date)) {
                    counselingDays.push(day);
                }
            }
            
            if (counselingDays.length > 0) {
                const halfPoint = Math.floor(counselingDays.length / 2);
                const startDay = counselingDays[0];
                const endDay = counselingDays[halfPoint - 1];
                
                for (let day = startDay; day <= endDay; day++) {
                    const date = new Date(year, month, day);
                    if (isWeekday(date)) {
                        events.push({
                            title: '어르신 상담 기간',
                            date: date,
                            type: '어르신상담',
                            isMultiDay: true,
                            startDate: formatDate(new Date(year, month, startDay)),
                            endDate: formatDate(new Date(year, month, endDay))
                        });
                    }
                }
            }

            // 5. 둘째주 4일 (월~목) - 급여대장 만들기, 상실신고 취득
            let secondWeekDays = [];
            for (let day = 1; day <= daysInMonth; day++) {
                const date = new Date(year, month, day);
                if (getWeekOfMonth(date) === 2 && isWeekday(date) && secondWeekDays.length < 4) {
                    secondWeekDays.push(day);
                }
            }
            
            if (secondWeekDays.length >= 4) {
                const startDay = secondWeekDays[0];
                const endDay = secondWeekDays[3];
                
                for (let day = startDay; day <= endDay; day++) {
                    const date = new Date(year, month, day);
                    if (isWeekday(date)) {
                        events.push({
                            title: '급여대장 만들기',
                            date: date,
                            type: '급여대장',
                            isMultiDay: true,
                            startDate: formatDate(new Date(year, month, startDay)),
                            endDate: formatDate(new Date(year, month, endDay))
                        });
                        events.push({
                            title: '상실신고 취득',
                            date: date,
                            type: '상실신고',
                            isMultiDay: true,
                            startDate: formatDate(new Date(year, month, startDay)),
                            endDate: formatDate(new Date(year, month, endDay))
                        });
                    }
                }
            }

            // 6. 넷째주 3일 (월~수) - 요양 일정 넣기, 제공기록지 넣기
            let fourthWeekDays = [];
            for (let day = 1; day <= daysInMonth; day++) {
                const date = new Date(year, month, day);
                if (getWeekOfMonth(date) === 4 && isWeekday(date) && fourthWeekDays.length < 3) {
                    fourthWeekDays.push(day);
                }
            }
            
            if (fourthWeekDays.length >= 3) {
                const startDay = fourthWeekDays[0];
                const endDay = fourthWeekDays[2];
                
                for (let day = startDay; day <= endDay; day++) {
                    const date = new Date(year, month, day);
                    if (isWeekday(date)) {
                        events.push({
                            title: '요양 일정 넣기',
                            date: date,
                            type: '요양일정',
                            isMultiDay: true,
                            startDate: formatDate(new Date(year, month, startDay)),
                            endDate: formatDate(new Date(year, month, endDay))
                        });
                        events.push({
                            title: '제공기록지 넣기',
                            date: date,
                            type: '제공기록지',
                            isMultiDay: true,
                            startDate: formatDate(new Date(year, month, startDay)),
                            endDate: formatDate(new Date(year, month, endDay))
                        });
                    }
                }
            }

            // 7. 마지막 주 평일 중 하나 - 명세서 생성
            for (let day = daysInMonth; day >= 1; day--) {
                const date = new Date(year, month, day);
                if (isWeekday(date)) {
                    events.push({
                        title: '명세서 생성',
                        date: date,
                        type: '명세서',
                        isMultiDay: false
                    });
                    break;
                }
            }

            return events;
        }

        // 연속 일정 위치 판단
        function getMultiDayPosition(event, currentDate) {
            if (!event.isMultiDay) return 'single';
            
            const dateStr = formatDate(currentDate);
            if (dateStr === event.startDate) return 'start';
            if (dateStr === event.endDate) return 'end';
            if (dateStr > event.startDate && dateStr < event.endDate) return 'middle';
            return 'single';
        }

        // 달력 렌더링
        function renderCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            
            document.getElementById('currentMonth').textContent = `${year}년 ${month + 1}월`;
            
            const firstDay = new Date(year, month, 1);
            const lastDay = new Date(year, month + 1, 0);
            const prevLastDay = new Date(year, month, 0);
            
            const firstDayOfWeek = firstDay.getDay();
            const lastDate = lastDay.getDate();
            const prevLastDate = prevLastDay.getDate();
            
            let html = '';
            
            // 정기 일정 생성
            const recurringEvents = generateRecurringEvents(year, month);
            
            // 이전 달 날짜
            for (let i = firstDayOfWeek - 1; i >= 0; i--) {
                const date = new Date(year, month - 1, prevLastDate - i);
                html += renderDay(date, true, []);
            }
            
            // 현재 달 날짜
            for (let day = 1; day <= lastDate; day++) {
                const date = new Date(year, month, day);
                const dateStr = formatDate(date);
                
                // 해당 날짜의 일정들
                const dayEvents = [
                    ...recurringEvents.filter(e => formatDate(e.date) === dateStr),
                    ...customEvents.filter(e => e.date === dateStr)
                ];
                
                html += renderDay(date, false, dayEvents);
            }
            
            // 다음 달 날짜
            const remainingDays = 42 - (firstDayOfWeek + lastDate);
            for (let day = 1; day <= remainingDays; day++) {
                const date = new Date(year, month + 1, day);
                html += renderDay(date, true, []);
            }
            
            document.getElementById('calendar').innerHTML = html;
        }

        // 날짜 셀 렌더링
        function renderDay(date, isOtherMonth, events) {
            const today = new Date();
            const isToday = formatDate(date) === formatDate(today);
            
            let classes = 'calendar-day';
            if (isOtherMonth) classes += ' other-month';
            if (isToday) classes += ' today';
            
            let eventsHtml = '';
            
            // 일정 렌더링
            events.forEach(event => {
                if (event.isMultiDay) {
                    const position = getMultiDayPosition(event, date);
                    let positionClass = '';
                    let showContent = false;
                    
                    if (position === 'start') {
                        positionClass = 'multi-day-start';
                        showContent = true;
                    } else if (position === 'middle') {
                        positionClass = 'multi-day-middle';
                        showContent = false;
                    } else if (position === 'end') {
                        positionClass = 'multi-day-end';
                        showContent = false;
                    }
                    
                    eventsHtml += `
                        <div class="event-bar ${positionClass} event-${event.type}" 
                             title="${event.title}">
                            ${showContent ? event.title : '&nbsp;'}
                        </div>
                    `;
                } else {
                    const bgColor = event.color || '';
                    const className = event.type ? `event-${event.type}` : 'event-custom';
                    eventsHtml += `
                        <div class="event-item ${className}" 
                             style="${bgColor ? 'background:' + bgColor : ''}"
                             title="${event.title}">
                            ${event.title}
                        </div>
                    `;
                }
            });
            
            return `
                <div class="${classes}">
                    <div class="day-number">${date.getDate()}</div>
                    ${eventsHtml}
                </div>
            `;
        }

        // 이전 달
        function prevMonth() {
            currentDate.setMonth(currentDate.getMonth() - 1);
            renderCalendar();
        }

        // 다음 달
        function nextMonth() {
            currentDate.setMonth(currentDate.getMonth() + 1);
            renderCalendar();
        }

        // 일정 추가 모달 열기
        function openAddEventModal() {
            document.getElementById('eventModal').classList.add('active');
            document.getElementById('eventDate').value = formatDate(currentDate);
        }

        // 모달 닫기
        function closeModal() {
            document.getElementById('eventModal').classList.remove('active');
            document.getElementById('eventForm').reset();
            selectedColor = '#ffd4e0';
            updateColorSelection();
        }

        // 색상 선택
        function updateColorSelection() {
            document.querySelectorAll('.color-option').forEach(option => {
                option.classList.remove('selected');
                if (option.dataset.color === selectedColor) {
                    option.classList.add('selected');
                }
            });
        }

        // 커스텀 일정 저장
        function saveCustomEvent(e) {
            e.preventDefault();
            
            const title = document.getElementById('eventTitle').value;
            const date = document.getElementById('eventDate').value;
            const memo = document.getElementById('eventMemo').value;
            
            customEvents.push({
                title: title,
                date: date,
                color: selectedColor,
                memo: memo,
                type: 'custom',
                isMultiDay: false
            });
            
            saveCustomEvents();
            closeModal();
            renderCalendar();
        }

        // 색상 옵션 클릭 이벤트
        document.addEventListener('DOMContentLoaded', () => {
            loadCustomEvents();
            renderCalendar();
            
            // 색상 선택
            document.querySelectorAll('.color-option').forEach(option => {
                option.addEventListener('click', () => {
                    selectedColor = option.dataset.color;
                    updateColorSelection();
                });
            });

            // 모달 외부 클릭 시 닫기
            document.getElementById('eventModal').addEventListener('click', (e) => {
                if (e.target.id === 'eventModal') {
                    closeModal();
                }
            });
        });
    </script>
</body>
</html>
